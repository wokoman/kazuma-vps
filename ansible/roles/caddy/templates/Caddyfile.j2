{
    email {{ caddy_email }}
}

{{ site_domain }} {
    root * {{ website_dest }}
    encode zstd gzip
    file_server
    log
}

www.{{ site_domain }} {
    redir https://{{ site_domain }}{uri}
}

{% if miniflux_enabled %}
{{ miniflux_domain }} {
    reverse_proxy 127.0.0.1:{{ miniflux_listen_port }}
    log
}
{% endif %}

# Catch-all HTTP on port 80 â†’ redirect to apex
:80 {
    redir https://{{ site_domain }}{uri}
}
